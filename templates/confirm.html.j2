{% extends "base.html.j2" %}
{% set page_title = 'Add Scopes (2/3)' %}

{% block body %}

    {% if team_name != None %}
        <p><strong>{{ user_name }}</strong>, here are the scopes you selected.
        Please click the button below to add them to your token for workspace <strong>{{ team_name }}</strong>.</p>
    {% else %}
        <p>Here are the scopes you selected. Please click the button below to create a token with these scopes.</p>
    {% endif %}
    <ul>
        {% for scope in scopes %}
            <li>{{ scope }}</li>
        {% endfor %}
    </ul>
    
    <a class="btn btn-outline-primary" href="{{ oauth_url }}">Add to Token</a>    
    
    <a class="btn btn-outline-secondary" href="{{ restart_url }}">Back</a>
    
{% endblock %}